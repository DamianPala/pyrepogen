[metadata]
name = {{project_name}}
author = {{author}}
author-email = {{author_email}}
maintainer = {{maintainer}}
maintainer-email = {{maintainer_email}}
summary = {{short_description}}
description-file = {{description_file}}
home-page = {{home_page}}
license = {{license}}
classifier =
    Development Status :: 4 - Beta
    Environment :: Other Environment
    Intended Audience :: Developers
    Intended Audience :: Information Technology
    License :: OSI Approved :: {{license}} License
    Operating System :: OS Independent
    Programming Language :: Python
    Programming Language :: Python :: {{min_python}}
keywords = 
    {{project_name}}

[pbr]
skip_changelog = 1
skip_authors = 1

[pyrepogen]
# Possible values: package or module
project-type = {{project_type}}
# Possible values: generated or prepared
changelog-type = {{changelog_type}}
# Possible values: generated or prepared
authors-type = {{authors_type}}
# Ignore directories for requirements discovery. Insert as an unix style path absolute or relative.
pipreqs-ignore =
    {{repoassist_name}}
    {{tests_path}}

[options]
{% if options.sample_layout and options.project_type == 'module' %}py_modules = 
    {{project_name}}
{% endif %}


[files]


[entry_points]
{% if options.sample_layout %}console_scripts =
    {{entry_point}}{% endif %}


[build_sphinx]
source-dir = docs
build-dir  = docs/build
all_files  = 1

[upload_sphinx]
upload-dir = docs/build/html

[tool:pytest]
norecursedirs = . .svn _build tmp* lib/third lib *.egg bin distutils build docs demo
python_files = *.py
addopts = -p no:xdist --tb=long --capture=fd -rxX  --maxfail=10
# --durations=3    report the top 3 longest tests

# these are important for distributed testing, to speedup their execution we minimize what we sync
;rsyncdirs = . your_package_name
rsyncignore = .hg .git
pep8ignore = E501 E265 E127 E128 E402

[flake8]
exclude = migrations,__pycache__,build,bmll/config.py,env,src,.tox,{{repoassist_name}}
# the only additional ignores are the docstrings ones Dxx, the other.
ignore = D, H306
max-line-length=119

# Following lines refers to autopep8
max_line_length=119
aggressive=2
experimental=1

[coverage:report]
exclude_lines =
omit = 
    conftest.py
